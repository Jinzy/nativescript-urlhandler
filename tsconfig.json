{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "lib": [
            "es2015",
            "es2015.iterable",
            "es6",
            "dom"
        ],
        "types": [
            "jasmine"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        }
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "test",
        "platforms"
    ]
}
